<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:textSize="15sp"
        android:text="Enter an address (or just tell us where you are)"
        android:id="@+id/deliverousWelcomeText"
        />

    <EditText
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/deliverousWelcomeText"
        android:id="@+id/deliverousEnterText"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:id="@+id/deliverousSubmitButton"
        android:layout_below="@+id/deliverousEnterText"
        android:layout_marginTop="10sp"
        />


</RelativeLayout>